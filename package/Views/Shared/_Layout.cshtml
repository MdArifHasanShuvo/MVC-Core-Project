<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 70px;
            background-color: rgb(144, 164, 174);
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class=" navbar navbar-light navbar-expand-md fixed-top border-bottom" style="background-color:rgb(0, 180, 137)">
        <div class=" container-fluid">
            <span class="navbar-brand text-info">Solution Center</span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Customers", "Index", "Customers", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Solutions", "Index", "Solutions", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid" style="min-height:calc(100vh - 110px)">
        @RenderBody()
    </div>
    <footer class="container text-primary border-top border-danger fw-bold bg-light text-center"
            style="height:40px">
        &copy;@DateTime.Now.Year - MVC5 Application
        &clubs;&clubs;1264678-Md Arif Hasan Shuvo&clubs;&clubs;
    </footer>
    @RenderSection("scripts", false)
</body>
</html>
